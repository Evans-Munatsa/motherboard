<div class="container contact">
  <div class="row">
    <div class="col-md-8">
      <form name="sentMessage" id="contactForm" novalidate>
        <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
        <div class="control-group form-group">
          <div class="controls">
            <%= f.input :name, :required => true, class: "form-control" %>
          </div>
        </div>
        <div class="control-group form-group">
          <div class="controls">
            <%= f.input :email, :required => true, class: "form-control" %>
          </div>
        </div>
        <div class="control-group form-group">
          <div class="controls">
            <%= f.input :message, :as => :text, :required => true, class: "form-control" %>
          </div>
        </div>
        <div>
          </br>
          <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
        </div>
        <% end %>
      </form>
    </div>
    <div class="col-md-4">
      <h3>Contact Details</h3>
      <p><i class="fa fa-phone"></i>
      <abbr title="Phone">Phone</abbr>: 081 767 5205/ 073 719 4634</p>
      <p><i class="fa fa-envelope-o"></i>
        <abbr title="Email">E-mail</abbr>: <a href="evolveprogramming.org@gmail.com">evolveprogramming.org@gmail.com</a>
      </p>
    </div>
  </div>
</div>